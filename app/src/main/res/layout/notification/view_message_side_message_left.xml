<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="42dp">
    <LinearLayout android:gravity="center_vertical" android:layout_gravity="center_vertical" android:orientation="horizontal" android:id="@+id/content_ll" android:background="@drawable/bg_message_side_message_book_left" android:paddingLeft="8dp" android:paddingRight="2dp" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <LinearLayout android:layout_gravity="center_vertical" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:textSize="12sp" android:textStyle="bold" android:textColor="0x106000c" android:ellipsize="marquee" android:gravity="left" android:id="@+id/title_tv" android:layout_width="wrap_content" android:layout_height="match_parent" android:maxWidth="120dp" android:singleLine="true" android:marqueeRepeatLimit="marquee_forever" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintTop_toTopOf="0"/>
            <TextView android:textSize="12sp" android:textColor="0x106000c" android:ellipsize="end" android:gravity="center_vertical" android:id="@+id/content_tv" android:focusable="true" android:focusableInTouchMode="true" android:layout_width="wrap_content" android:layout_height="match_parent" android:maxWidth="160dp" android:singleLine="true" android:marqueeRepeatLimit="marquee_forever" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintRight_toLeftOf="@+id/user_iv"/>
        </LinearLayout>
        <FrameLayout android:id="@+id/avatar_fl" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView android:layout_gravity="center_vertical" android:id="@+id/user_iv" android:padding="4dp" android:layout_width="38dp" android:layout_height="38dp"/>
            <TextView android:textSize="8sp" android:textColor="0x106000b" android:gravity="center" android:id="@+id/unread_tv" android:background="@drawable/ic_red_circle" android:layout_width="12dp" android:layout_height="12dp" android:layout_marginLeft="26dp" android:text="9"/>
            <View android:textColor="0x106000b" android:gravity="center" android:id="@+id/reply_view" android:background="@drawable/ic_yellow_circle_reply" android:layout_width="12dp" android:layout_height="12dp" android:layout_marginLeft="26dp" android:layout_marginTop="24dp"/>
        </FrameLayout>
    </LinearLayout>
    <View android:id="@+id/space" android:layout_width="10dp" android:layout_height="1dp"/>
</LinearLayout>
