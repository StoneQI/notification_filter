<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:gravity="center_vertical" android:orientation="horizontal" android:paddingLeft="8dp" android:paddingRight="8dp" android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView android:id="@+id/icon_iv" android:background="@drawable/ic_circle_launcher" android:padding="4dp" android:layout_width="36dp" android:layout_height="36dp" android:layout_margin="4dp" android:layout_marginLeft="4dp" android:layout_marginRight="16dp"/>
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="0dp" android:layout_height="22dp" android:layout_weight="1">
        <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1">
            <ImageView android:layout_gravity="center_vertical" android:id="@+id/btn_back" android:layout_width="22dp" android:layout_height="22dp" android:src="@drawable/notification_back_white" android:layout_centerInParent="true"/>
        </RelativeLayout>
        <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1">
            <ImageView android:layout_gravity="center_vertical" android:id="@+id/btn_home" android:layout_width="22dp" android:layout_height="22dp" android:src="@drawable/notification_home_white" android:layout_centerInParent="true"/>
        </RelativeLayout>
        <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1">
            <ImageView android:layout_gravity="center_vertical" android:id="@+id/btn_recent" android:layout_width="22dp" android:layout_height="22dp" android:src="@drawable/notification_recent_white" android:layout_centerInParent="true"/>
        </RelativeLayout>
    </LinearLayout>
    <TextView android:textSize="12sp" android:textColor="0x106000b" android:layout_gravity="center_vertical" android:id="@+id/restore" android:background="@drawable/bg_half_circle_btn_primary" android:paddingLeft="8dp" android:paddingTop="4dp" android:paddingRight="8dp" android:paddingBottom="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:text="@string/restore"/>
    <TextView android:textSize="12sp" android:textColor="0x106000b" android:layout_gravity="right|center_vertical|center_horizontal|center" android:id="@+id/cancel" android:background="@drawable/bg_half_circle_btn_inactive" android:paddingLeft="8dp" android:paddingTop="4dp" android:paddingRight="8dp" android:paddingBottom="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:text="0x1040000"/>
</LinearLayout>
