<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/gr"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="end"
    android:layout_margin="3dp"
    android:orientation="vertical">



    <LinearLayout
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal">

            <ImageView
                android:id="@+id/close_item"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:clickable="true"
                android:layout_marginEnd="20dp"
                android:elevation="3dp"
                android:layout_margin="4dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:visibility="visible"
                android:background="@drawable/widget_float_window_logo_background"
                android:src="@drawable/widget_float_button_close"
                android:focusable="true" />

            <ImageView
                android:id="@+id/icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerInside"
                android:elevation="3dp"
                android:layout_margin="3dp"
                android:src="@drawable/widget_float_button_logo" />




    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
<!--        <LinearLayout-->
<!--            android:id="@+id/float_custom_view_right"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"/>-->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/float_custom_view_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="3dp"
            android:clickable="true"
            android:layout_margin="4dp"
            android:theme="@style/Theme.MaterialComponents.DayNight"
            android:foreground="?android:attr/selectableItemBackground"
            android:focusable="true">

        </com.google.android.material.card.MaterialCardView>


    </RelativeLayout>


</LinearLayout>