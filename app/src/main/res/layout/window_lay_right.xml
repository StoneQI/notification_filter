<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/window_root_lay"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/round_background_right"
    android:elevation="3dp"
    android:gravity="center|center_vertical"
    android:padding="3dp"
    >

                <com.cbman.roundimageview.RoundImageView
                    android:id="@+id/window_icon_img"
                    android:layout_width="37dp"
                    android:layout_height="37dp"
                    android:padding="2dp"
                    android:scaleType="centerInside"
                    app:borderWidth="0dp"
                    app:displayBorder="false"
                    app:displayType="round_rect"
                    app:radius="7dp" />

                <LinearLayout
                    android:id="@+id/window_messgae_lay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:visibility="visible">

                        <com.stone.notificationfilter.widget.MarqueeTextView
                            android:id="@+id/window_title_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="marquee"
                            android:focusable="true"
                            android:singleLine="true"
                            android:textColor="#000000" />

                        <com.stone.notificationfilter.widget.MarqueeTextView
                            android:id="@+id/window_content_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="marquee"
                            android:focusable="true"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:singleLine="true" />


                </LinearLayout>
</LinearLayout>